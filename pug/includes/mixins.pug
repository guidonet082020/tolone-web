mixin getNombreNumeros(nombreNumeros)
    each e, i in nombreNumeros
        .card.card-body.p-1.m-1(style="width: 120px;")
            p.m-0.p-1.text-center.text-uppercase.font-weight-bold.font-14(data-get=`${e.name}`) #{e.title} 

mixin getRemeras(remeras)
    each remera in remeras
        if(remera.name === "model01" || remera.name === "model04")    
            .card.card-body.p-1.m-1.d-none(id=`${remera.name}`)
                img(src=`${remera.path}`, alt=`${remera.name}`, data-forms=`${remera.forms}`, width="50").d-block.mx-auto
        else
            .card.p-0.m-1.square-element-4.rounded-xl.z-depht-2.fade-custom(id=`${remera.name}`, data-slide=`${remera.name}`)
                img(src=`${remera.path}`, alt=`${remera.name}`, data-forms=`${remera.forms}`, width="50").d-block.m-auto

