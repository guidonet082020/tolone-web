mixin solicitarCreacion()
    button.btn.btn-success.py-3.my-5(type="button", data-toggle="modal", data-target="#formCreation") SOLICITAR camiseta
    
    //  Modal 
    .modal.fade#formCreation(tabindex="-1", role="dialog", aria-labelledby="formCreationLabel", aria-hidden="true")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h5.modal-title#formCreationLabel Solicitar creacion de camiseta
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") ×
                .modal-body
                    +formSolicitarCreacion()
                .modal-footer.mx-auto
                    button.btn.btn-secondary(type="button", data-dismiss="modal") Cancelar
                    button.btn.btn-primary(type="button") Enviar mail
